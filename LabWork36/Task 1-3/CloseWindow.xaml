<Window x:Class="Task_1_3.CloseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task_1_3"
        mc:Ignorable="d"
        Title="CloseWindow" Height="250" Width="400" ResizeMode="NoResize">
    <WrapPanel>
        <Image Source="Sun.png"  Height="250" Width="100" />
        <StackPanel Width="300">
            <Label Content="Вы хотите закрыть приложение?" Height="50"/>
            <Canvas Grid.Row="1" Grid.Column="1">
                <Button x:Name="YesButton" Content="Да" Height="100" Width="100" IsDefault="True" Click="YesButton_Click" Canvas.Left="10" Canvas.Top="50"/>
                <Button x:Name="NoButton" Content="Нет" Height="100" Width="100" IsCancel="True" Click="NoButton_Click" Canvas.Left="150" Canvas.Top="50"/>
            </Canvas>
        </StackPanel>
    </WrapPanel>
</Window>
