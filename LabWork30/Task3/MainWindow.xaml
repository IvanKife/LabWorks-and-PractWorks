<Window x:Class="Task3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task3"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBox x:Name="inputTextBox" Height="150"/>
        <StackPanel Grid.Row="1">
            <Label Content="Размер шрифта"/>
            <RadioButton Content="10" Checked="FontSizeRadioButton_Checked" GroupName="FontSize"/>
            <RadioButton Content="20" Checked="FontSizeRadioButton_Checked" GroupName="FontSize"/>
            <RadioButton Content="30" Checked="FontSizeRadioButton_Checked" GroupName="FontSize"/>
            
            <Label Content="Выравнивание"/>
            <RadioButton Content="По левому краю" Checked="LeftAligmentRadioButton_Checked" GroupName="Aligment"/>
            <RadioButton Content="По центру" Checked="CenterAligmentRadioButton_Checked" GroupName="Aligment"/>
            <RadioButton Content="По правому краю" Checked="RightAligmentRadioButton_Checked" GroupName="Aligment"/>
        </StackPanel>
    </Grid>
</Window>
